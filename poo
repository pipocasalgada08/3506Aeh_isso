class Pessoa (){
    //criação de atributos para a classe Pessoa 
    //os valores dados aqui, são padrões
    var nome = ""
    var idade = 0  
    var altura = 1.90 
    var peso = 30.0 
    var nacionalidade = "Italiano" 
   
}
class Bolo(var sabor: String,
           var tamanho: String, 
           var recheio: String, 
           var cobertura : String, 
           var preco : Double, 
           var complemento: String,
           var pronto: Boolean
         
          ){ 

}













